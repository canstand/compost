# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.js]
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4
